node("sf2-2"){
    stage('*** Cleanup***') {
        cleanWs()
    }
    stage('*** Check out SCM ***') {
        checkout scm
    } 
    stage('*** Compilation Phase ***') { 
        sh '''#!/bin/bash
            export LD_LIBRARY_PATH=/home/jenkins_user/GNU_deps/gmp6.3.0_installed/lib:/home/jenkins_user/GNU_deps/mpfr4.2.1_installed/lib:/home/jenkins_user/GNU_deps/mpc1.3.1_installed/lib:$LD_LIBRARY_PATH
            mkdir build
            ./configure --prefix=$PWD/build --disable-multilib --with-gmp=/home/jenkins_user/GNU_deps/gmp6.3.0_installed --with-mpfr=/home/jenkins_user/GNU_deps/mpfr4.2.1_installed --with-mpc=/home/jenkins_user/GNU_deps/mpc1.3.1_installed
            make linux -j $(nproc)
         '''
    }
    stage (' *** Running Binaries ***'){
        sh '''#!/bin/bash
            build/bin/riscv64-unknown-linux-gnu-gcc -v
         '''
    }
}
