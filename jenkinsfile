node("sf2-3"){
    stage('*** Cleanup***') {
        cleanWs()
    }
    stage('*** Check out SCM ***') {
        checkout scm
    } 
    stage('*** Compilation Phase ***') { 
        sh '''#!/bin/bash
            git submodule update --init --recursive
            cd gcc
            ./contrib/download_prerequisites
            cd ..
            mkdir build
            ./configure --prefix=$PWD/build --with-arch=rv64gc
            make linux -j $(nproc)
         '''
    }
    stage (' *** Running Binaries ***'){
        sh '''#!/bin/bash
            build/bin/riscv64-unknown-linux-gnu-gcc -v
         '''
    }
}
