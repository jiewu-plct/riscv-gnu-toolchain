node("sf2-2"){
    stage('*** Cleanup***') {
        cleanWs()
    }
    stage('*** Check out SCM ***') {
        checkout scm
    } 
    stage('*** Compilation Phase ***') { 
        sh '''#!/bin/bash
            mkdir build
            ./configure --prefix=$PWD/build --with-arch=rv64gc --with-gmp=/home/jenkins_user/GNU_deps/gmp6.3.0_installed --with-mpfr=/home/jenkins_user/GNU_deps/mpfr4.2.1_installed --with-mpc=/home/jenkins_user/GNU_deps/mpfr4.2.1_installed
            make linux -j $(nproc)
         '''
    }
    stage (' *** Running Binaries ***'){
        sh '''#!/bin/bash
            build/bin/riscv64-unknown-linux-gnu-gcc -v
         '''
    }
}
